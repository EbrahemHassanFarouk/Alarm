        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/text_color</item>
<!--        background button-->
        <item name="colorPrimaryVariant">#00A5B2BC</item>
        <item name="colorOnPrimary">@color/text_color</item>
<!--        textColor on button-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/text_color</item>
<!--        switch-->
        <item name="colorSecondaryVariant">@color/purple_500</item>
        <item name="colorOnSecondary">#323F49</item>
